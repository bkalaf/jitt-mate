{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "ESNEXT.Symbol", "ESNEXT.WeakRef", "ESNEXT", "ES2015.Reflect", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowArbitraryExtensions": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": true,
    "declaration": true,
    "skipDefaultLibCheck": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/global.d.ts"]
}
